<%include ../layout/userheader.ejs%>

<style>

table,td,th{


border: 1px solid rgb(80, 55, 38);
color: rgb(80, 55, 38);
}

#addo{

margin-left: 15%;
}
h1{
    margin-left: 15%;
}
#cont{
            background-color: rgba(185, 143, 94, 0.473);
            width: 70%;
            margin-left: 15%;
            height: 100%;
        }

</style>
<div id="cont">
     <h1 style="color:rgb(63, 52, 22)">My Orders</h1>
     <div id="addo">
    <br>
    <br>
    Date from : <input type="date"/>
    Date to : <input type="date" />
    <br>
    <br>
     <table>
         <tr>
             <th>Order Date</th>
             <th>Status</th>
             <th>Amount</th>
             <th>action</th>
             </tr>

             <%orders.forEach(function(order){%>
                <tr>
                    <td><%= order.time%></td>
                    <td><%= order.status%></td>

                    <td><%= order.price%></td>
                    <td><a href="/orders/delete">Cancel</a></td>
                    <td><%= order.room%></td>
                </tr>
                <tr>
                <td colspan=4>
                    <img src="/img/<%= order.img%>" width="100" height="100">
                </td
                </tr>
                <%}) %>

            </table>

        </div>
        </div>
 <%include ../layout/footer.ejs%>
