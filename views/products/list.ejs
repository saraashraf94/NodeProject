<%include ../layout/header.ejs%>
<style>
table,td,th{

   
    border: 1px solid rgb(80, 55, 38);
    color: rgb(80, 55, 38);
}


h1{
    margin-left: 15%;
    color: rgb(80, 55, 38);
}


#listp{

    margin-left: 15%;
}

#cont{
            background-color: rgba(185, 143, 94, 0.473);
            width: 70%;
            margin-left: 15%;
            height: 100%;
        }

</style>
<div id="cont">
     <h1>List Products</h1>
     <%if(msg !=''){%>
        <h3><%=msg%></h3>
    <%}%>
  <div id="listp">
     <table>
         <tr>
             <th>Product Name</th>
             <th>Price</th>
             <th>Img</th>
             <th>Action</th>
             </tr>
             <%data.docs.forEach(function(prod){%>
                <tr>
                    <td><%= prod.prod_name%></td>
                    <td><%= prod.price%></td>
                    <td><img src="/img/<%= prod.img%>" width="100" height="100"></td>
                    <td><a href="/products/delete/<%=prod._id%>">Delete</a></td>
                    <td><a href="/products/edit/<%=prod._id%>">edit </a></td>
                   <!-- <td><a href="/products/status/<%=prod.id%>">
                        <%if (prod.status=="unavailable" ){%>
                        <%= prod.status%> 
                        <% } %>
                        <%if (prod.status =="available"){%>
                            <p>available</p>
                            <% } %>
                            <%if (!prod.status ){%>
                            <p>available</p>
                            <% } %>
                             
                        </a></td>-->
                </tr>
                <%}) %>
            </table>
                <ul>
                    <%for(var i=1;i<=data.pages;i++){%>
                          <li><a href="/products/list/<%=i%>">page<%=i%></a></li>
                        <%}%>
                    </ul>
          </div>
         </div>
